<UserControl x:Class="FlightTicketManagement.View.Components.AddFlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightTicketManagement.View.Components"
             xmlns:vm="clr-namespace:FlightTicketManagement.ViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             Height="600" 
             Width="400"
             x:Name="AddFl">

    <UserControl.DataContext>
        <vm:AddFlightVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="Title"
       TargetType="TextBlock">
            <Setter Property="FontSize" Value="19" />
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#222"/>

        </Style>
        <Style x:Key="Input" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>

        </Style>
    </UserControl.Resources>

    <Border Background="#fff"
    CornerRadius="13"
    Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Button out -->
            <Grid Grid.Row="0" HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="CloseThick"
                                 Foreground="#999"
                                 Height="22"
                                 Width="22">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CloseAACM}"
                                           CommandParameter="{Binding ElementName=AddFl}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </materialDesign:PackIcon>
            </Grid>

            <!-- Ma chuyen bay -->
            <Grid Grid.Row="1" Margin="0 0 0 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Grid Grid.Row="0">
                    <TextBlock Text="Mã chuyến bay"
                       Style="{StaticResource Title}"/>
                </Grid>
                <!-- Input -->
                <TextBox Grid.Row="1"
                 x:Name="FlightID"
                 BorderThickness="0 0 0 1"
                 Style="{StaticResource Input}"
                 materialDesign:HintAssist.Hint="Nhập mã chuyến bay"
                 PreviewTextInput="InputFlightID_PreviewTextInput"
                 PreviewKeyDown="InputFlightID_PreviewKeyDown"
                 />
            </Grid>

            <!-- San bay di -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Grid Grid.Row="0" Margin="2 0 0 5">
                    <TextBlock Text="Sân bay đi"
                       Style="{StaticResource Title}"/>
                </Grid>

                <ComboBox Grid.Row="1"
                  x:Name="StartListAirport"
                  ItemsSource="{Binding FlightItemList}"
                  FontSize="15"
                  Foreground="#555"
                  FontFamily="Roboto"
                  materialDesign:HintAssist.Hint="Hãy chọn sân bay"/>
            </Grid>

            <!-- Sân bay đến -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Grid Grid.Row="0" Margin="2 0 0 5">
                    <TextBlock Text="Sân bay đến"
                       Style="{StaticResource Title}"/>
                </Grid>

                <ComboBox Grid.Row="1"
                  x:Name="EndListAirport"
                  ItemsSource="{Binding FlightItemList}"
                  FontSize="15"
                  Foreground="#555"
                  FontFamily="Roboto"
                  materialDesign:HintAssist.Hint="Hãy chọn sân bay"/>
            </Grid>

            <!-- Ngày giờ -->
            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Grid Grid.Row="0" Margin="2 0 0 5">
                    <TextBlock Text="Ngày giờ"
                       Style="{StaticResource Title}"/>
                </Grid>
                <!-- Pick time date -->
                <Grid Grid.Row="1">
                    <DatePicker x:Name="FlightDatePicker"
                        Margin="0 5 0 0" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"/>
                    <materialDesign:TimePicker 
                        x:Name="FlightTimePicker" 
                        Margin="100 5 0 0" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                </Grid>
            </Grid>

            <!-- Thời gian bay -->
            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Title -->
                <Grid Grid.Row="0" Margin="2 0 0 5">
                    <TextBlock Text="Thời gian bay"
                       Style="{StaticResource Title}"/>
                </Grid>
                <!-- Time picker -->
                <materialDesign:TimePicker Grid.Row="1"
                                   x:Name="FlightTime"
                                   Foreground="#555"
                                   FontSize="15"/>
            </Grid>

            <!-- Số lượng ghế hạng 1 -->
            <Grid Grid.Row="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Title -->
                <Grid Grid.Row="0" Margin="2 0 0 5">
                    <TextBlock Text="Số lượng ghế hạng 1"
                       Style="{StaticResource Title}"/>
                </Grid>
                <!-- Số lượng -->
                <TextBox Grid.Row="1"
                 x:Name="Seat1"
                 Style="{StaticResource Input}"
                 BorderThickness="0 0 0 1"/>
            </Grid>

            <!-- Số lượng ghế hạng 2 -->
            <Grid Grid.Row="7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Title -->
                <Grid Grid.Row="0" Margin="2 0 0 5">
                    <TextBlock Text="Số lượng ghế hạng 2"
                       Style="{StaticResource Title}"/>
                </Grid>
                <!-- Input -->
                <TextBox Grid.Row="1"
                 x:Name="Seat2"
                 Style="{StaticResource Input}"
                 BorderThickness="0 0 0 1"/>
            </Grid>

            <!-- Button cancel and confirm -->
            <Grid Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Confirm Button -->
                <Button Grid.Column="0"
                Style="{StaticResource confirmButton}"
                Height="45"
                Margin="0 0 10 0">
                    <TextBlock Text="Xác nhận"
                       Foreground="#FFF"
                       FontSize="18"
                       FontFamily="Roboto"
                       FontWeight="SemiBold"
                       TextAlignment="Center"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding ConfirmCommand}"
                                           CommandParameter="{Binding ElementName=AddFl}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                Style="{StaticResource cancelButton}"
                Height="45"
                Margin="10 0 0 0">
                    <TextBlock Text="Huỷ bỏ"
                       Foreground="#FFF"
                       FontSize="18"
                       FontFamily="Roboto"
                       FontWeight="SemiBold"
                       TextAlignment="Center"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding CancelCommand}"
                                           CommandParameter="{Binding ElementName=AddFl}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
