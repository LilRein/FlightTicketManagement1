<UserControl x:Class="FlightTicketManagement.View.Components.AddFlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightTicketManagement.View.Components"
             xmlns:vm="clr-namespace:FlightTicketManagement.ViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             Height="600" 
             Width="600"
             x:Name="AddFl">

    <UserControl.DataContext>
        <vm:AddFlightVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="FontSize" Value="19" />
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>
        <Style x:Key="Input" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#fff" CornerRadius="13" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Button out -->
            <Grid Grid.Row="0" HorizontalAlignment="Right" Grid.ColumnSpan="2">
                <materialDesign:PackIcon Kind="CloseThick"
                                         Foreground="#999"
                                         Height="22"
                                         Width="22">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding CloseAACM}"
                                                   CommandParameter="{Binding ElementName=AddFl}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </materialDesign:PackIcon>
            </Grid>

            <!-- Ma chuyen bay -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="0 0 10 10">
                <TextBlock Text="Mã chuyến bay" Style="{StaticResource Title}" />
                <TextBox x:Name="FlightID" BorderThickness="0 0 0 1" Style="{StaticResource Input}"
                         materialDesign:HintAssist.Hint="Nhập mã chuyến bay"
                         PreviewTextInput="InputFlightID_PreviewTextInput"
                         PreviewKeyDown="InputFlightID_PreviewKeyDown" />
            </Grid>

            <!-- Ma tuyen bay -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="0 0 10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="253*"/>
                    <ColumnDefinition Width="17*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mã tuyến bay" Style="{StaticResource Title}" Grid.ColumnSpan="2" />
                <ComboBox x:Name="RouteID" ItemsSource="{Binding MaTuyenBay}"
                          FontSize="15" Foreground="#555" FontFamily="Roboto"
                          materialDesign:HintAssist.Hint="Chọn mã tuyến bay" Grid.ColumnSpan="2" Margin="0,39,0,0" VerticalAlignment="Top" />
            </Grid>

            <!-- San bay di -->
            <Grid Grid.Row="2" Grid.Column="0" Margin="0 0 10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="53*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mã sân bay đi" Style="{StaticResource Title}" Grid.ColumnSpan="2" />
                <ComboBox x:Name="StartListAirport" ItemsSource="{Binding MaSanBayDi}"
                          FontSize="15" Foreground="#555" FontFamily="Roboto"
                          materialDesign:HintAssist.Hint="Hãy chọn sân bay" Grid.ColumnSpan="2" Margin="0,39,0,0" VerticalAlignment="Top" />
            </Grid>

            <!-- San bay den -->
            <Grid Grid.Row="2" Grid.Column="1" Margin="0 0 10 10">
                <TextBlock Text="Mã sân bay đến" Style="{StaticResource Title}" />
                <ComboBox x:Name="EndListAirport" ItemsSource="{Binding MaSanBayDen}"
                          FontSize="15" Foreground="#555" FontFamily="Roboto"
                          materialDesign:HintAssist.Hint="Hãy chọn sân bay" Margin="0,39,0,0" VerticalAlignment="Top" />
            </Grid>

            <!-- Ma may bay -->
            <Grid Grid.Row="3" Grid.Column="0" Margin="0 0 10 10">
                <TextBlock Text="Mã máy bay" Style="{StaticResource Title}" />
                <TextBox x:Name="PlaneID" BorderThickness="0 0 0 1" Style="{StaticResource Input}"
                         materialDesign:HintAssist.Hint="Nhập mã máy bay" />
            </Grid>

            <!-- Ngay bay -->
            <Grid Grid.Row="3" Grid.Column="1" Margin="0 0 10 10">
                <TextBlock Text="Ngày bay" Style="{StaticResource Title}" />
                <DatePicker x:Name="FlightDatePicker" Margin="0,41,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>

            <!-- Gio khoi hanh -->
            <Grid Grid.Row="4" Grid.Column="0" Margin="0 0 10 10">
                <TextBlock Text="Giờ khởi hành" Style="{StaticResource Title}" />
                <materialDesign:TimePicker x:Name="FlightTimePicker" Margin="0,41,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>

            <!-- Thoi luong -->
            <Grid Grid.Row="4" Grid.Column="1" Margin="0 0 10 10">
                <TextBlock Text="Thời lượng" Style="{StaticResource Title}" />
                <TextBox x:Name="Duration" BorderThickness="0 0 0 1" Style="{StaticResource Input}"
                         materialDesign:HintAssist.Hint="Nhập thời lượng" />
            </Grid>

            <!-- Don gia -->
            <Grid Grid.Row="5" Grid.Column="0" Margin="0 0 10 10">
                <TextBlock Text="Đơn giá" Style="{StaticResource Title}" />
                <TextBox x:Name="Price" BorderThickness="0 0 0 1" Style="{StaticResource Input}"
                         materialDesign:HintAssist.Hint="Nhập đơn giá" />
            </Grid>

            <!-- So luong ghe -->
            <Grid Grid.Row="5" Grid.Column="1" Margin="0 0 10 10">
                <TextBlock Text="Số lượng ghế" Style="{StaticResource Title}" />
                <TextBox x:Name="SeatCount" BorderThickness="0 0 0 1" Style="{StaticResource Input}"
                         materialDesign:HintAssist.Hint="Nhập số lượng ghế" />
            </Grid>

            <!-- Button cancel and confirm -->
            <Grid Grid.Row="6" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource confirmButton}" Height="45" Margin="0 0 10 0">
                    <TextBlock Text="Xác nhận" Foreground="#FFF" FontSize="18" FontFamily="Roboto" FontWeight="SemiBold" TextAlignment="Center"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding ConfirmCommand}" CommandParameter="{Binding ElementName=AddFl}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button Grid.Column="1" Style="{StaticResource cancelButton}" Height="45" Margin="10 0 0 0">
                    <TextBlock Text="Huỷ bỏ" Foreground="#FFF" FontSize="18" FontFamily="Roboto" FontWeight="SemiBold" TextAlignment="Center"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding CancelCommand}" CommandParameter="{Binding ElementName=AddFl}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
