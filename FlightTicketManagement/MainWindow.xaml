<Window x:Class="FlightTicketManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FlightTicketManagement.ViewModel"
        xmlns:Menu="clr-namespace:FlightTicketManagement.Utilities"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700" 
        Width="950"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationVM />
    </Window.DataContext>
    
    <Grid>

        <!-- Window Border -->
        <Border Background="#212529"
                CornerRadius="20" />

        <Grid>

            <!-- Base grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="278" />
                <ColumnDefinition Width="672"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid HorizontalAlignment="Left"
                  Width="278">

                <Border Background="#272B2F"
                        CornerRadius="20,0,0,20"/>

                <StackPanel Height="400"
                            Width="278">

                    <!-- // Dashboard // -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding DashboardCommand}"
                              IsChecked="True">

                        <Grid>

                            <Image Source="Images/img_home.png"
                                   Style="{StaticResource Image_Style}"/>

                            <TextBlock Text="Dashboard"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>

                    </Menu:Btn>

                    <Menu:Btn Style="{StaticResource BtnStyle}"
          Command="{Binding ScheduleCommand}"
          >

                        <Grid>

                            <Image Source="Images/img_home.png"
               Style="{StaticResource Image_Style}"/>

                            <TextBlock Text="Schedule"
                   Style="{StaticResource Text_Style}"/>
                        </Grid>

                    </Menu:Btn>

                </StackPanel>

            </Grid>

            <Grid Grid.Column="1">

                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}"/>

            </Grid>

        </Grid>

    </Grid>
</Window>
